/**** SelenScript ****/

stmt_continue	<- {| {:type:''->"continue":}
						{:start:{}:}
						CONTINUE
						{:finish:{}:}
					|}

#block Statements
#include Statements
			 / stmt_continue
#endblock


expr_if	<- {| {:type:''->"ifexpr":}
				{:start:{}:}
				IF Sc {:condition:expression:} Sc THEN Sc {:lhs:expression:} Sc ELSE Sc {:rhs:expression:}
				{:finish:{}:}
			|}

#block Expressions
			 / expr_if
#include Expressions
#endblock
